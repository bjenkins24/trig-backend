{
    "private": true,
    "scripts": {
        "coverage": "open-cli coverage/dashboard.html",
        "test": "php artisan test && vendor/bin/coverage-check clover.xml 85",
        "scaffold": "php artisan app:scaffold --env=testing && php artisan app:scaffold && php artisan queue:clear redis sync-cards && php artisan queue:clear redis card-data",
        "bootstrap": "composer install && php artisan storage:link && php artisan horizon:install && npm run scaffold",
        "elastic": "php artisan elastic:migrate:refresh && php artisan scout:import \"App\\Models\\Card\"",
        "log": "vi storage/logs/laravel.log",
        "tn": "php artisan test --group n"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.php": "vendor/bin/php-cs-fixer fix --config=./.php_cs"
    },
